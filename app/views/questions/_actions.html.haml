- if can? :manage, question
  %span.actions
    - if question.solved?
      = link_to "Als ungelöst markieren", question_path(question, :question => {:solved => false}), :method => :put
    - else
      = link_to "Als gelöst markieren", question_path(question, :question => {:solved => true}), :method => :put

    |
    = link_to "Bearbeiten", edit_question_path(question)
    |
    = link_to "Löschen", question, :method => :delete, :confirm => "Diese Frage wirklich löschen?"
