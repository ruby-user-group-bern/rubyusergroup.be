- full_text ||= false

%li.question
  .left
    .nr= number_for(question)
    .avatar= image_tag avatar_url(question.author)
  %h4= link_to question.title, question
  .created
    %strong Erstellt am:
    = l question.created_at
  = render 'actions', :question => question
  %p.text
    - unless full_text
      - omission = "... #{link_to("mehr", question)}"
      = truncate(question.content, :length => 250, :omission => omission)
    - else
      = pretty question.content
