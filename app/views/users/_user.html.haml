.user.container
  .right
    %h2
      - if user.github_username.present?
        = link_to user.github_username, github_url(user.github_username)
      - else
        = user
    %span.info
      %strong Erstellt am:
      = l user.created_at
    %dl.content.info
      %dt Gestellte Fragen
      %dd= user.questions.count
      %dt Geschriebene Antworten
      %dd= user.answers.count
      %dt Eingereichte Themen
      %dd= user.topics.count
  .left
    .nr
      = number_for(user)
    .avatar
      = image_tag avatar_url(user)

